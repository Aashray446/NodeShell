{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "type": "module",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts"
  },
  "include": [
    "src/**/*"
  ],
  "devDependencies": {
    "@types/node": "^18.11.9"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "prompt-sync": "^4.2.0"
  }
}
